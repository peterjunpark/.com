<footer>
    <small>
        <span id="copyright">
            <span style="font-family: sans-serif;">&copy;</span> {{ new Date().getFullYear() }} {{ author.name }}
        </span>

        {{ for footer_link of footer_links }}
        <span> | </span>
        <a href="{{ footer_link.url }}" target="_blank" rel="noopener noreferrer">
            {{ footer_link.text }}
        </a>
        {{ /for }}
    </small>
</footer>
