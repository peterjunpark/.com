{
    "imports": {
        "lume/": "https://deno.land/x/lume@v3.0.5/",
        "lume/jsx-runtime": "https://deno.land/x/ssx@v0.1.11/jsx-runtime.ts"
    },
    "tasks": {
        "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
        "build": "deno task lume",
        "serve": "deno task lume -s",
        "resume:compile": "mkdir -p _site/downloads && typst compile src/resume.typ _site/downloads/peterjunpark-resume.pdf",
        "resume:watch": "mkdir -p _site/downloads && typst watch src/resume.typ _site/downloads/peterjunpark-resume.pdf --open xdg-open"
    },
    "compilerOptions": {
        "types": [
            "lume/types.ts"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "lume"
    },
    "unstable": [
        "temporal",
        "fmt-component"
    ],
    "nodeModulesDir": "auto",
    "lint": {
        "plugins": [
            "https://deno.land/x/lume@v3.0.5/lint.ts"
        ]
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 100
    }
}
